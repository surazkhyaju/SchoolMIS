@model SchoolMISDayLog.Models.User
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
@using (Html.BeginForm("Create", "User", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.LabelFor(d=>d.DeveloperId,"Developer",new { @class="col-md-3 control-label"})
        <div class="col-md-9">
            @Html.DropDownListFor(u=>u.DeveloperId, ViewBag.Developers as SelectList,"Select Developer",new { @class = "form-control" })
            @Html.ValidationMessageFor(u=>u.DeveloperId)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(u=>u.UserName, new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            @Html.TextBoxFor(u => u.UserName, new { @class = "form-control" })
            @Html.ValidationMessageFor(u=> u.UserName)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(u=>u.Password, new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            @Html.TextBoxFor(u=> u.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(u =>u.Password)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.UserType, new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            @Html.TextBoxFor(u => u.UserType, new { @class = "form-control" })
            @Html.ValidationMessageFor(u=> u.UserType)
        </div>
    </div>
    <div class="form-actions">
        <div class="row">
            <div class="col-md-offset-3 col-md-9">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="button" class="btn btn-default">Cancel</button>
            </div>
        </div>

    </div>

}



